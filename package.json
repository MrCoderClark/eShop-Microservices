  "scripts": {
    "dev": "npm run dev:all",
    "dev:auth": "ts-node -r tsconfig-paths/register apps/auth-service/src/main.ts",
    "dev:gateway": "ts-node -r tsconfig-paths/register apps/api-gateway/src/main.ts",
    "dev:all": "concurrently \"npm run dev:auth\" \"npm run dev:gateway\"",
    "build:packages": "tsc -p packages/tsconfig.json",
    "watch:packages": "tsc -p packages/tsconfig.json --watch",
    "dev:local": "ts-node -r tsconfig-paths/register apps/auth-service/src/main.ts",
    "build": "npm run build:packages && npx nx run-many --target=build --all",
    "auth-docs": "node apps/auth-service/src/swagger.js",
    "user-ui": "npx nx run-many --target=dev --all --projects=user-ui"
